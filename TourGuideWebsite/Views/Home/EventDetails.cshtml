@model TourGuideWebsite.Models.EventDetails
@{
    ViewBag.Title = "EventDetails";
}

<h1 class="page-header">
    @Html.DisplayFor(model => @model.tourInfo.TourName)
    @Html.DisplayFor(model => @model.eventInfo.TourDate)
</h1>

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index")">Tours</a> </li>
    <li><a href="#"></a>Event Details</li>
    <li class="active">
        @Html.DisplayFor(model => model.tourInfo.TourName)
    </li>
</ol>


