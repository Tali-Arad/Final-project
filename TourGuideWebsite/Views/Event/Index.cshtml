@model IEnumerable<TourGuideProtocol.DataStruct.AEvent>

@{
    ViewBag.Title = "Index";
}

<h2>Events</h2>

<div id="sortingCats">
    <ul class="nav nav-tabs responsive" id="sortingByCats">
        <li><a href="@Url.Action("Index", "Tour")">Tours</a></li>
        <li class="active"><a href="@Url.Action("Index", "Event")">Events</a></li>
        <li><a href="@Url.Action("Index", "Reg")">Registrations</a></li>
        <li><a href="@Url.Action("Index", "User")">Users</a></li>
    </ul>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="tab-content responsive">
    <div class="table-responsive">
        <table class="table table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TourName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TourDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TourGuide)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsOn)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TourName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TourDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TourGuide)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsOn)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { tourid = item.TourID, tourdate = item.TourDate }) |
                        @Html.ActionLink("Details", "Details", new { tourid = item.TourID, tourdate = item.TourDate }) |
                        @Html.ActionLink("Delete", "Delete", new { tourid = item.TourID, tourdate = item.TourDate })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>