@model TourGuideProtocol.DataStruct.AEvent

@{
    ViewBag.Title = "Edit";
}


<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    // Passing the TourOriginalDate to the controller (the div is hidden)
    <div hidden="hidden">
        @Html.EditorFor(x => x.TourOriginalDate);
        @Html.EditorFor(x => x.TourName);
    </div>

    <fieldset>
        <legend>AEvent</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.TourDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TourDate)
            @Html.ValidationMessageFor(model => model.TourDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TourGuide)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TourGuide)
            @Html.ValidationMessageFor(model => model.TourGuide)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsOn)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsOn)
            @Html.ValidationMessageFor(model => model.IsOn)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
