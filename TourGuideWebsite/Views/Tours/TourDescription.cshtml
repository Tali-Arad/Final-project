@model TourGuideProtocol.DataStruct.ATour

@{
    ViewBag.Title = "TourDescription";
}

<h2>Tour Description</h2>

<fieldset>
    <legend>@Model.TourName</legend>
    <div class="display-label">
        Location
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TourLocation)
    </div>

    <div class="display-label">
        Area
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TourArea)
    </div>
    <div class="display-label">
         Category
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TourCategory)
    </div>
    <div class="display-label">
         Duration (in hours)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TourDuration)
    </div>
    <div class="display-label">
        Price
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TourPrice)
    </div>
    <div class="display-label">
        Description
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TourDescription)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Tour Dates", "TourDates", new { id=Model.TourID, keyword = ViewBag.keyword }) |
    @Html.ActionLink("Back to Tour List", "Tours", new { id = ViewBag.keyword })
</p>
