@model TourGuideProtocol.DataStruct.ATour

@{
    ViewBag.Title = "TourDescription";
}

<h1 class="page-header">
    Tour Description: @Html.DisplayFor(model => @model.TourName)
</h1>

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index")">Tours</a> </li>
    <li><a href="#"></a>Tour Description</li>
    <li class="active">
        @Html.DisplayFor(model => model.TourName)
    </li>
</ol>

